<h1>User</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Number</th>
      <th>State</th>
      <th>User ID</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
     <td><%= user.name %></td>
     <td><%= user.email %></td>
     <% if user.license.present? %>
     <td><%= user.license.number %></td>
     <td><%= user.license.state %></td>
     <td>
      <% if user.license.state.nil? %>
      No License
      <% else %>
      <%= user.license.user_id %>
      <% end %>
      <td><%= link_to 'Edit', edit_user_path(user) %></td>
      <td><%= link_to 'Delete', user_path(user), method: :delete, confirm:
     'Are you sure you want to delete this user?' %></td>
    </td>
    <% end %>
  </tr>
  <div id="search">
    <p>
      <% form_tag users_path, :method => 'get' do %>
      <p>
        <%= text_field_tag :search, params[:search] %>
        <%= submit_tag "Search", :name => nil %>
      </p>
    </p>
      <% end %>
    </tbody>
  </table>
<% end %>
<p>
  <%= link_to 'New User', new_user_path %>
</p>

